    CREATE TABLE BASIC_INFO(
    SR_NO INTEGER , 
    USER_ID INTEGER PRIMARY KEY,
    FIRST_NAME VARCHAR(20) NOT NULL ,
    LAST_NAME VARCHAR(20) NOT NULL ,
    GENDER VARCHAR(20) NOT NULL
    );

    CREATE TABLE SYMPTOMS(
    USER_ID INTEGER PRIMARY KEY ,
    TEMP DECIMAL(6,3) NOT NULL ,
    COUGH VARCHAR(10) NOT NULL , 
    SHORT_BREATH VARCHAR(10) NOT NULL ,
    RUNNING_NOSE VARCHAR(10) NOT NULL,
    PREG VARCHAR(10) NOT NULL ,
    FOREIGN_TRP VARCHAR(20) NOT NULL ,
    FOREIGN KEY (USER_ID) REFERENCES BASIC_INFO(USER_ID)
    );

    CREATE TABLE ZONE_SELECT(
    USER_ID INTEGER PRIMARY KEY ,
    ZONE VARCHAR(10) DEFAULT 'G',
    LOCATION VARCHAR(20) NOT NULL ,    
    FOREIGN KEY (USER_ID) REFERENCES BASIC_INFO(USER_ID)
    );

    CREATE TABLE SUSPECTS(
    USER_ID INTEGER PRIMARY KEY,
    LOCATION VARCHAR(20) NOT NULL ,
    ZONE VARCHAR(10) DEFAULT 'G',
    SUSPECT VARCHAR(10) DEFAULT 'N',
    FOREIGN KEY (USER_ID) REFERENCES BASIC_INFO(USER_ID)
    );
